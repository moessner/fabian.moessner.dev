{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve-jekyll",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "jekyll",
          "pattern": { "regexp": "." },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Auto-regeneration: enabled",
            "endsPattern": "Server running.*press ctrl-c to stop"
          }
        }
      ]
    }
  ]
}
